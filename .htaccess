RewriteEngine On
RewriteRule ^home$ index.php
RewriteRule ^cart$ index.php?controller=cart
RewriteRule ^news$ index.php?controller=news
RewriteRule ^contact$ index.php?controller=contact
RewriteRule ^product$ index.php?controller=products&action=category&id=0
RewriteRule ^products/category/(.*)/(.*)$  index.php?controller=products&action=category&id=$1
RewriteRule ^products/detail/(.*)/(.*)$    index.php?controller=products&action=detail&id=$1
RewriteRule ^news/detail/(.*)/(.*)$        index.php?controller=news&action=detail&id=$1
RewriteRule ^account/login$    index.php?controller=account&action=login
RewriteRule ^account/logout$   index.php?controller=account&action=logout
RewriteRule ^account/register$   index.php?controller=account&action=register